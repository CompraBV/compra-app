<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="nl.compra.compraapp.CartActivity">

    <ImageView
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/imageView4"
        android:background="@drawable/logo_128"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Winkelwagen"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_gravity="center"
        android:nestedScrollingEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/winkelwagenTableLayout"
            android:nestedScrollingEnabled="false"
            android:layout_below="@+id/checkoutButton"/>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Betalen"
        android:id="@+id/checkoutButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
